{
  "name": "Browsepad Extension",
  "description": "Leave notes to your future self while browsing the web.",
  "version": "0.1.0",
  "manifest_version": 2,
  "icons": {
    "48": "./icon48.png",
    "128": "./icon128.png"
  },
  "browser_action": {
    "default_popup": "./popup.html"
  },
  "background": {
    "scripts": ["./background.js"]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "https://www.google.com/*",
    "<all_urls>",
    "storage"
  ]
}
